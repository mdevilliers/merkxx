    {lager, ".*", {git, "git://github.com/basho/lager.git", "HEAD"}},
    {uuid, ".*", {git, "git://github.com/okeuday/uuid.git", "HEAD"}},
    {gproc, ".*", {git, "git://github.com/uwiger/gproc.git", "HEAD"}}
]}.